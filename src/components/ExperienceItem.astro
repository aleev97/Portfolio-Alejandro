---
export interface Props {
    title: string;
    description: string;
    date: string;
}

const { title, description, date } = Astro.props;
---

<time class="mb-1 text text-3xl font-medium leading-none text-yellow-300"
    >{date}</time
>
<h3
    class="text-xl font-semibold text-blue-500 mt-2 hover:text-blue-500 transition-colors duration-300"
>
    {title}
</h3>
<p class="mb-4 text-base font-normal text-gray-300 text-pretty">
    {description}
</p> 
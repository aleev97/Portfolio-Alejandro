<header
    class="fixed flex justify-center items-center top-2 left-1/2 -translate-x-1/2 z-10 w-auto sm:w-auto transition-colors duration-300 ease-in-out px-3 py-1 rounded-full"
    id="navbar"
>
    <nav
        class="flex justify-center items-center w-auto sm:w-auto px-4 py-2 text-sm font-medium text-gray-200 rounded-full"
    >
        <a
            class="nav-link px-3 py-1 mx-2 transition hover:text-sky-400"
            href="#experiencia"
            aria-label="experiencia"
        >
            Experiencia
        </a>
        <a
            class="nav-link px-3 py-1 mx-2 transition hover:text-sky-400"
            href="#proyectos"
            aria-label="proyectos"
        >
            Proyectos
        </a>
        <a
            class="nav-link px-3 py-1 mx-2 transition hover:text-sky-400"
            href="#sobre-mi"
            aria-label="sobre-mi"
        >
            Sobre mí
        </a>
        <a
            class="nav-link px-3 py-1 mx-2 transition hover:text-sky-400"
            href="#"
            aria-label="contacto"
        >
            Contacto
        </a>
    </nav>
</header>

<script>
    document.addEventListener("scroll", () => {
        const navbar = document.getElementById("navbar");
        const sections = document.querySelectorAll("section");
        const navLinks = document.querySelectorAll(".nav-link");

        if (navbar) {
            if (window.scrollY > 50) {
                navbar.classList.add("navbar-scrolled");
            } else {
                navbar.classList.remove("navbar-scrolled");
            }
        }

        let currentSection = "";
        sections.forEach((section) => {
            const sectionTop = section.offsetTop;
            const sectionHeight = section.offsetHeight;
            if (window.scrollY >= sectionTop - 50 && window.scrollY < sectionTop + sectionHeight) {
                currentSection = section.getAttribute("id") || "";
            }
        });

        navLinks.forEach((link) => {
            if (link.getAttribute("href") === `#${currentSection}`) {
                link.classList.add("text-sky-400");
            } else {
                link.classList.remove("text-sky-400");
            }
        });
    });
</script>

